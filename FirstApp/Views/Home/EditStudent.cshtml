


@model FirstApp.Models.StudentModel;

<div class="text-center">
    <h1 class="display-4">Edit Student</h1>

    <form method="post" action="EditStudent">
        <input name="Id" type="hidden" value="@Model.Id" />
        <input name="FullName" type="text" placeholder="Full Name" value="@Model.FullName" />
        <br />
        <input name="FatherName" type="text" placeholder="Father Name" value="@Model.FatherName" />
        <br />
        <input name="Class" type="text" placeholder="Class" value="@Model.Class" />
        <br />
        <input name="Section" type="text" placeholder="Section" value="@Model.Section" />
        <br />
        <input name="Email" type="text" placeholder="Email" value="@Model.Email" />
        <br />
        <button type="submit">Save Data</button>
    </form>
</div>
